<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:Civ2Like.Views"
        x:Class="Civ2Like.MainWindow"
        Title="Civ2Like - Hex Starter v10"
        WindowState="Maximized"
		WindowStartupLocation="CenterScreen" Background="#FAFAFA">
	<DockPanel LastChildFill="True">
		<WrapPanel DockPanel.Dock="Top">
		</WrapPanel>
		<StackPanel DockPanel.Dock="Right" Width="300">
			<Border BorderThickness="2" BorderBrush="Black" CornerRadius="8" Margin="2">
				<local:ActivePlayerControl x:Name="ActivePlayerControl" />
			</Border>
			<Border BorderThickness="2" BorderBrush="Black" CornerRadius="8" Margin="2">
				<local:ActiveUnitControl x:Name="ActiveUnitControl"/>
			</Border>
		</StackPanel>
		<Border>
			<ScrollViewer HorizontalScrollBarVisibility="Auto"
						VerticalScrollBarVisibility="Auto"
						  AllowAutoHide="False">
				<local:GameView x:Name="GameView" Focusable="True" />
			</ScrollViewer>
		</Border>
	</DockPanel>
</Window>
